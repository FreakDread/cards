<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carta Holográfica</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: black;
            margin: 0;
        }
        .holo-card {
            position: relative;
            width: 300px;
            height: 450px;
            perspective: 1000px;
        }
        .holo-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }
        .holo-card:hover img {
            transform: rotateY(20deg) rotateX(10deg) scale(1.05);
            box-shadow: 0 10px 30px rgba(0, 255, 255, 0.5);
        }
    </style>
</head>
<body>
    <div class="holo-card">
        <img src="carta.png" alt="Carta Holográfica">
    </div>
    <script>
        document.addEventListener('mousemove', (e) => {
            const card = document.querySelector('.holo-card img');
            const { clientX: x, clientY: y } = e;
            const { innerWidth: width, innerHeight: height } = window;
            const rotateY = (x / width - 0.5) * 30;
            const rotateX = (y / height - 0.5) * -30;
            card.style.transform = `rotateY(${rotateY}deg) rotateX(${rotateX}deg) scale(1.05)`;
        });
    </script>
</body>
</html>
